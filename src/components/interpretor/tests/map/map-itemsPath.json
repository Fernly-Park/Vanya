    "definition": {
      "Comment": "A Hello World example of the Amazon States Language using Pass states",
      "StartAt": "MapState",
      "States": {
        "MapState": {
          "Type": "Map",
          "ItemsPath": "$.input",
          "MaxConcurrency": 0,
          "Iterator": {
            "StartAt": "Pass State",
            "States": {
              "Pass State": {
                "Type": "Pass",
                "End": true
              }
            }
          },
          "Next": "NEXT STATE"
        },
        "NEXT STATE": {
          "Type": "Pass",
          "End": true
        }
      }
    }
