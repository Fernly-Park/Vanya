                 "stateExitedEventDetails": {
                  "name": "Hello",
                  "output": "{\"hello\":\"world\"}"
                 }
                },
                {
                 "timestamp": "2020-10-05T16:13:41.924Z",
                 "type": "ExecutionSucceeded",
                 "id": 7,
