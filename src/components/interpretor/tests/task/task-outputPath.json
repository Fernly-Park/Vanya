{
    "describe": "simple state machine with a single task state and an outputPath of '$.output'", 
    "tests": [
        {
            "input": {},
            "expectedStateMachineStatus": "SUCCEEDED",
            "expectedOutput": "hello",
            "describe": "should succeed if the output contain a 'output' key",
            "activitiesToCreate": [
                {
                    "name": "tmp",
                    "expectedInput": {},
                    "output": {"output": "hello"}
                }
            ],
            "events": [
                {
                 "timestamp": "2020-10-07T19:07:21.873Z",
                 "type": "ExecutionStarted",
                 "id": 1,
                 "previousEventId": 0,
                 "executionStartedEventDetails": {
                  "input": "{}",
                  "roleArn": "todo"
                 }
                },
                {
                 "timestamp": "2020-10-07T19:07:21.907Z",
                 "type": "TaskStateEntered",
                 "id": 2,
                 "previousEventId": 0,
                 "stateEnteredEventDetails": {
                  "name": "Hello",
                  "input": "{}"
                 }
                },
                {
                 "timestamp": "2020-10-07T19:07:21.907Z",
                 "type": "ActivityScheduled",
                 "id": 3,
                 "previousEventId": 2,
                 "activityScheduledEventDetails": {
                  "resource": "arn:aws:states:eu-west:012345678901:activity:tmp",
                  "input": "{}"
                 }
                },
                {
                 "timestamp": "2020-10-07T19:07:22.135Z",
                 "type": "ActivityStarted",
                 "id": 4,
                 "previousEventId": 3,
                 "activityStartedEventDetails": {}
                },
                {
                 "timestamp": "2020-10-07T19:07:22.479Z",
                 "type": "ActivitySucceeded",
                 "id": 5,
                 "previousEventId": 4,
                 "activitySucceededEventDetails": {
                  "output": "{\"output\":\"hello\"}"
                 }
                },
                {
                 "timestamp": "2020-10-07T19:07:22.479Z",
                 "type": "TaskStateExited",
                 "id": 6,
                 "previousEventId": 5,
                 "stateExitedEventDetails": {
                  "name": "Hello",
                  "output": "\"hello\""
                 }
                },
                {
                 "timestamp": "2020-10-07T19:07:22.479Z",
                 "type": "ExecutionSucceeded",
                 "id": 7,
                 "previousEventId": 6,
                 "executionSucceededEventDetails": {
                  "output": "\"hello\""
                 }
                }
            ]
        },
        {
            "input": {},
            "expectedStateMachineStatus": "SUCCEEDED",
            "expectedOutput": null,
            "describe": "should succeed if the output contain a 'output' key whose value is null",
            "activitiesToCreate": [
                {
                    "name": "tmp",
                    "expectedInput": {},
                    "output": {"output": null}
                }
            ],
            "events": [
                {
                 "timestamp": "2020-10-08T12:35:37.939Z",
                 "type": "ExecutionStarted",
                 "id": 1,
                 "previousEventId": 0,
                 "executionStartedEventDetails": {
                  "input": "{}",
                  "roleArn": "todo"
                 }
                },
                {
                 "timestamp": "2020-10-08T12:35:37.968Z",
                 "type": "TaskStateEntered",
                 "id": 2,
                 "previousEventId": 0,
                 "stateEnteredEventDetails": {
                  "name": "Hello",
                  "input": "{}"
                 }
                },
                {
                 "timestamp": "2020-10-08T12:35:37.968Z",
                 "type": "ActivityScheduled",
                 "id": 3,
                 "previousEventId": 2,
                 "activityScheduledEventDetails": {
                  "resource": "arn:aws:states:eu-west:012345678901:activity:tmp",
                  "input": "{}"
                 }
                },
                {
                 "timestamp": "2020-10-08T12:35:38.181Z",
                 "type": "ActivityStarted",
                 "id": 4,
                 "previousEventId": 3,
                 "activityStartedEventDetails": {}
                },
                {
                 "timestamp": "2020-10-08T12:35:38.576Z",
                 "type": "ActivitySucceeded",
                 "id": 5,
                 "previousEventId": 4,
                 "activitySucceededEventDetails": {
                  "output": "{\"output\":null}"
                 }
                },
                {
                 "timestamp": "2020-10-08T12:35:38.576Z",
                 "type": "TaskStateExited",
                 "id": 6,
                 "previousEventId": 5,
                 "stateExitedEventDetails": {
                  "name": "Hello",
                  "output": "null"
                 }
                },
                {
                 "timestamp": "2020-10-08T12:35:38.576Z",
                 "type": "ExecutionSucceeded",
                 "id": 7,
                 "previousEventId": 6,
                 "executionSucceededEventDetails": {
                  "output": "null"
                 }
                }
            ]
        },
        {
            "input": {},
            "expectedStateMachineStatus": "FAILED",
            "expectedOutput": null,
            "describe": "should fail if the output does not contain a 'output' key",
            "activitiesToCreate": [
                {
                    "name": "tmp",
                    "expectedInput": {},
                    "output": {}
                }
            ],
            "events": [
                {
                 "timestamp": "2020-10-07T19:09:26.768Z",
                 "type": "ExecutionStarted",
                 "id": 1,
                 "previousEventId": 0,
                 "executionStartedEventDetails": {
                  "input": "{}",
                  "roleArn": "todo"
                 }
                },
                {
                 "timestamp": "2020-10-07T19:09:26.788Z",
                 "type": "TaskStateEntered",
                 "id": 2,
                 "previousEventId": 0,
                 "stateEnteredEventDetails": {
                  "name": "Hello",
                  "input": "{}"
                 }
                },
                {
                 "timestamp": "2020-10-07T19:09:26.788Z",
                 "type": "ActivityScheduled",
                 "id": 3,
                 "previousEventId": 2,
                 "activityScheduledEventDetails": {
                  "resource": "arn:aws:states:eu-west:012345678901:activity:tmp",
                  "input": "{}"
                 }
                },
                {
                 "timestamp": "2020-10-07T19:09:26.984Z",
                 "type": "ActivityStarted",
                 "id": 4,
                 "previousEventId": 3,
                 "activityStartedEventDetails": {}
                },
                {
                 "timestamp": "2020-10-07T19:09:27.305Z",
                 "type": "ActivitySucceeded",
                 "id": 5,
                 "previousEventId": 4,
                 "activitySucceededEventDetails": {
                  "output": "{}"
                 }
                },
                {
                 "timestamp": "2020-10-07T19:09:27.305Z",
                 "type": "ExecutionFailed",
                 "id": 6,
                 "previousEventId": 5,
                 "executionFailedEventDetails": {
                  "error": "States.Runtime",
                  "cause": "An error occurred while executing the state 'Hello'. Invalid path '$.output' : No valid results for path: '$.output'"
                 }
                }
            ]
        }
    ],
    "definition": {
        "Comment": "A Hello World example of the Amazon States Language using Pass states",
        "StartAt": "Hello",
        "States": {
            "Hello": {
                "Type": "Task",
                "Resource": "arn:aws:states:eu-west:012345678901:activity:tmp",
                "OutputPath": "$.output",
                "End": true
            }
        }
    }    
}

